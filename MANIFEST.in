include README.md
include LICENSE
include requirements.txt
include setup.py
include .env.example
include start_ui.sh
include quickstart.sh

# Include all proto files
recursive-include src/proto *.proto

# Include web API static files
recursive-include src/web_api/static *
recursive-include src/web_api/templates *

# Include configuration files
include pyproject.toml
include .gitignore
include .gitattributes

# Exclude build artifacts
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .git
recursive-exclude * .pytest_cache
recursive-exclude * .mypy_cache
recursive-exclude * .ruff_cache

# Exclude data directories
prune qdrant_storage
prune .rag
prune logs
prune frontend/node_modules
prune frontend/build