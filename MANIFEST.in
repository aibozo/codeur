# Include documentation
include README.md
include LICENSE
include requirements.txt

# Include configuration files
recursive-include config *.yaml *.yml

# Include proto files
recursive-include src *.proto

# Include frontend assets (for development)
recursive-include frontend/public *
recursive-include frontend/src *.tsx *.ts *.css *.json

# Include scripts
recursive-include scripts *.sh *.py

# Include test data
recursive-include tests *.py *.yaml *.json

# Exclude compiled files and caches
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll

# Exclude version control
prune .git
prune .github

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude .coverage
exclude .pytest_cache

# Exclude build artifacts
prune build
prune dist
prune *.egg-info

# Exclude node modules
prune frontend/node_modules

# Exclude local data
prune qdrant_storage
prune logs